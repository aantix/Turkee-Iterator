<h3>Vote for your favorite submission.</h3>

<table>
  <tr>
    <th>Submission</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>Votes</th>
  </tr>

  <% @iterations.each do |iteration| %>
      <tr>

        <td>
        <span class="alt">
          <%= h iteration.value %>
        </span>
        </td>

        <td>
          <% turkee_form_for(IterationVote.new, @assignment_id) do |f| %>
              <%= f.hidden_field :iteration_id, :value => iteration.id %>
              <%= f.submit 'Vote!', :disabled => @disabled %>
          <% end %>
        </td>

        <td>
          <%= link_to_function('Copy', "set_text('iteration_value','#{CGI.escapeHTML(iteration.value)}')") %>
        </td>

        <td>
          <%= h iteration.iteration_votes.count %>
        </td>
      </tr>
  <% end %>
</table>