<div class="span-24">
  <%= @turkee_task.form_body %>
</div>

<div class="span-11">
  <h1>Vote for your favorite submission.</h1>

  <table>
    <tr>
      <th>Submission</th>
      <th>&nbsp;</th>
      <th>&nbsp;</th>
      <th># Votes</th>
    </tr>

    <% @iterations.each do |iteration| %>
        <tr>
          <td><%= h iteration.value %></td>
          <td>
            <% turkee_form_for IterationVote.new do |f| %>
                <%= f.hidden_field :iteration_id, :value => iteration.id %>
                <%= f.submit 'Vote!' %>
            <% end %>
          </td>
          <td>
            <%= link_to_function('Copy', "set_text('iteration_value','#{CGI.escapeHTML(iteration.value)}')") %>
          </td>
          <td><%= h iteration.iteration_votes.count %></td>
        </tr>
    <% end %>
  </table>
</div>

<div class="span-2">
  <h3>- <span class="alt">OR</span> -</h3>
</div>

<div class="span-11 last">
  <h1>Create your own</h1>
  For a chance to earn an additional bonus, submit your own creation to be voted on.

  <% turkee_form_for(@iteration) do |f| %>
      <%= f.error_messages %>

      <p>
        <%= f.text_area :value %>
      </p>

      <p>
        <%= f.submit 'Create' %>
      </p>
  <% end %>
</div>